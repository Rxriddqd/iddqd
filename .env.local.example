# Local Development Environment Configuration
# Copy this file to .env for local development

# Required Discord Configuration
DISCORD_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_guild_id_here

# Dashboard Configuration
DASHBOARD_CHANNEL_ID=channel_id_for_admin_dashboard

# Redis Configuration (Local)
# Install Redis locally: brew install redis (Mac) or apt-get install redis (Linux)
# Or use Docker: docker run -d -p 6379:6379 redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false
REDIS_ENABLED=true

# Persistent Disk (Local Development)
# Uses a local directory for storage
PERSISTENT_DISK_PATH=./data

# Logging
LOG_LEVEL=info

# Optional Feature Configuration

# Summon Panel
SUMMON_PANEL_CHANNEL_ID=
SUMMON_PANEL_MSG_RANGE=Sheet1!A1:B10
SUMMON_ROLE_ID=
SUMMON_PANEL_ADMIN_ROLE_ID=
SUMMON_PANEL_CHANNEL_RANGE=Sheet1!C1:D10

# Tier3 Configuration
TIER3_CHANNEL_ID=
TIER3_MSG_CELL=Sheet1!A1

# FlaskGamba Configuration
FLASKGAMBA_CHANNEL_ID=
FLASKGAMBA_TZ=America/New_York
FLASK_LOG_SHEET=Sheet1
FLASK_RULES_TEXT=Game rules here

# SoftRes Configuration
SR_PANEL_CHANNEL_ID=
EMBED_SEPERATOR_TRANSPARENT=

# Roles Configuration
ROLES_TARGET_CHANNEL_ID=
ROLES_SOCIAL_ALERT_CHANNEL_ID=

# Google Sheets Integration (Optional - For Export Only)
# Follow this guide to create a service account:
# https://cloud.google.com/iam/docs/creating-managing-service-accounts
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_PRIVATE_KEY=
SHEET_CONFIG_ID=
SHEET_IDDQD_ID=

# Database (Optional)
DATABASE_URL=
