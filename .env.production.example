# Production Environment Configuration (Render)
# Set these in your Render Web Service environment variables

# Required Discord Configuration
DISCORD_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_guild_id_here

# Dashboard Configuration
DASHBOARD_CHANNEL_ID=channel_id_for_admin_dashboard

# Redis Configuration (Render Redis Instance)
# Get these values from your Render Redis instance
# Format of Internal Redis URL: redis://red-xxx:password@hostname:6379
REDIS_HOST=your-redis-internal-hostname
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_from_render
REDIS_TLS=false
REDIS_ENABLED=true

# Persistent Disk (Render Disk Mount)
# This should match your Render disk mount path
PERSISTENT_DISK_PATH=/data

# Logging
LOG_LEVEL=info

# Optional Feature Configuration

# Summon Panel
SUMMON_PANEL_CHANNEL_ID=channel_id_here
SUMMON_PANEL_MSG_RANGE=Sheet1!A1:B10
SUMMON_ROLE_ID=role_id_here
SUMMON_PANEL_ADMIN_ROLE_ID=admin_role_id_here
SUMMON_PANEL_CHANNEL_RANGE=Sheet1!C1:D10

# Tier3 Configuration
TIER3_CHANNEL_ID=channel_id_here
TIER3_MSG_CELL=Sheet1!A1

# FlaskGamba Configuration
FLASKGAMBA_CHANNEL_ID=channel_id_here
FLASKGAMBA_TZ=America/New_York
FLASK_LOG_SHEET=FlaskLog
FLASK_RULES_TEXT=Game rules here

# SoftRes Configuration
SR_PANEL_CHANNEL_ID=channel_id_here
EMBED_SEPERATOR_TRANSPARENT=https://example.com/separator.png

# Roles Configuration
ROLES_TARGET_CHANNEL_ID=channel_id_here
ROLES_SOCIAL_ALERT_CHANNEL_ID=channel_id_here

# Google Sheets Integration (Optional - For Export Only)
# Store your service account credentials in environment variables
# The private key should be formatted as a single line with \n for newlines
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour\nPrivate\nKey\nHere\n-----END PRIVATE KEY-----\n"
SHEET_CONFIG_ID=your_config_sheet_id
SHEET_IDDQD_ID=your_main_sheet_id

# Database (Optional)
DATABASE_URL=postgresql://user:password@host:5432/database
